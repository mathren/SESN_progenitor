! Turn off wind
! hot_wind_scheme                               = ''
! cool_wind_RGB_scheme                          = ''
! cool_wind_AGB_scheme                          = ''

! Turn off thermohaline and semiconvection
thermohaline_coeff                              = 0
alpha_semiconvection                            = 0d0 !1.0d0
mlt_make_surface_no_mixing                      = .true.

! timesteps
min_timestep_limit                              = 1d-20 !(seconds)
